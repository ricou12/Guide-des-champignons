{% extends "default.html.twig" %}

{% block title %}
	Guide des champignons - {{fiche.communchamp}} : {{fiche.consochamp}}
{% endblock %}

{% block meta %}
    <meta name="Caractéristiques" content="Découvrez les principales caractéristiques de {{fiche.communchamp}}, sur le guide des champignons.">
{% endblock %}

{% block og %}
    <meta property="og:locale" content="fr_FR">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Guide des champignons - apprendre à reconnaitre : {{fiche.communchamp}}">
    <meta property="og:description" content="Découvrez les principales caractéristiques de {{fiche.communchamp}}, sur le guide des champignons.">
    <meta property="og:url" content="">
    <meta property="og:image" content="./assets/images/photo-fullscreen/{{ images[0] }}"/>
    <meta property="og:image:width" content="100" />
    <meta property="og:image:height" content="100" />
{% endblock %}

{% block body %}
<div class="container-fluid fiche">
    <div class="row">

        <div class="col-12 col-md-6 order-md-5 col-lg-6 order-lg-3 col-xl-5 order-xl-3 p-3 p-lg-3 p-xl-0 fiche__photo">
            <div id="carouselExampleIndicators" class="fiche__img carousel slide carousel-fade" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for i in 0..images|length-1 %}
                        {% if i == 0 %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{i}}" class="active"></li>
                        {% else %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{i}}"></li>
                        {% endif %}
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for i in 0..images|length-1 %}
                        {% if i == 0 %}
                                <div class="carousel-item active">
                                    <img src="{{ images[i] }}"
                                        class="d-block w-100" alt="{{ images[i] }}">
                                </div>
                        {% else %}
                                <div class="carousel-item">
                                    <img src="{{ images[i] }}"
                                        class="d-block w-100" alt="{{ images[i] }}">
                                </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                    data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                    data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-12 col-md-12 order-md-1 col-lg-6 order-lg-2 col-xl-7 order-xl-2 mt-1 text-center fiche__header">
            <h1 class="fiche__header__title">{{ fiche.communchamp }}</h1>
            <h3 class="fiche__header__letter text-uppercase">{{ fiche.latinchamp }}</h3>
        </div>

        <div class="col-12 col-md-12 order-md-2 col-lg-6 order-lg-1 col-xl-5 order-xl-1 mt-2 d-flex justify-content-center align-items-end fiche__eat">
            <div class="text-center">
                <img src="{{getImage(fiche.consochamp)}}" alt="?">
                <p>{{fiche.consochamp}}</p>
            </div>
        </div>

        <div class="col-12 col-md-6 order-md-7 col-lg-6 order-lg-4 col-xl-7 order-xl-4 px-3 px-md-4 py-3 p-lg-5 fiche__description">
            {% if fiche.localchamp %}
                <p><span>Nom local</span><br> {{ fiche.localchamp }}</p>
            {% endif  -%}
            {% if fiche.chapeauchamp %}
                <p><span>Chapeau</span><br> {{ fiche.chapeauchamp }}</p>
            {% endif  %}
            {% if fiche.typelameschamp %}
                <p><span>Type de lamelles</span><br> {{ fiche.typelameschamp }}</p>
            {% endif  %}
            {% if fiche.lameschamp %}
                <p><span>Hyménium</span> (Lames - Tubes - Plis - Aiguillons - Pores)<br> {{ fiche.lameschamp }}</p>
            {% endif  %}
            {% if listeFiches.piedchamp %}
                <p><span>Pied</span><br> {{ fiche.piedchamp }}</p>
            {% endif  %}
            {% if fiche.chairchamp %}
                <p><span>Chair</span><br> {{ fiche.chairchamp }}</p>
            {% endif  %}
            {% if fiche.habitatchamp %}
                <p><span>Habitat</span><br> {{ fiche.habitatchamp }}</p>
            {% endif  %}
            {% if fiche.remarqueschamp %}
                <p><span>Remarques</span><br> {{ fiche.remarqueschamp }}</p>
            {% endif  %}
        </div>

    </div>
</div>

{% endblock %}