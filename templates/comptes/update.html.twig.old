{% extends "default.html.twig" %}

{% block title %}
    Guide des champignons - Editer une fiche descriptive
{% endblock %}

{% block body %}
	<div class="added_bg-img"></div>
	<div class="container added mt-3">
		<div class="row">
			<div
				class="col-12 mb-3">
				{# <h1 class="text-center">{{title}}</h1> #}
				<form action="index.html?routing=ajouter" method="POST" class="px-3 pb-3 added_form added_form--bgcolor">
					<!-- <h1 class="text-center">{{title}}</h1> -->
					<div class="form-row py-4 px-1">
						<div class="col was-validated">
							<label for="FormControlInput1">Nom commun</label>
							<input type="text" class="form-control is-valid" id="validationServer01" placeholder="ex : Lactaire délicieux" required>
							<div class="invalid-feedback">Veuillez remplir ce champ !
							</div>
						</div>
						<div class="col">
							<label for="FormControlInput2">Nom latin</label>
							<input type="text" class="form-control" placeholder="ex : lactarius deliciosus">
						</div>
						<div class="col">
							<label for="FormControlInput3">Nom local</label>
							<input type="text" class="form-control" placeholder="ex : Safrané">
						</div>
					</div>
					<h4>Photos</h4>
					<div class="form-group">
						<label for="exampleFormControlFile1">Example file input</label>
						<input type="file" class="form-control-file" id="exampleFormControlFile1">
					</div>
					<h4>Descriptif</h4>
					<div class="form-group">
						<label for="exampleFormControlTextarea1">Chapeau</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
					</div>
					<label class="mt-4">Type de lames</label>
					<div class="form-group d-flex flex-wrap">
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/adnees.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="Adnées" checked>
								<label class="form-check-label" for="gridRadios1">
									Adnées
								</label>
							</div>
						</div>
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/decurrentes.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="Décurrentes">
								<label class="form-check-label" for="gridRadios2">
									Décurrentes
								</label>
							</div>
						</div>
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/echancrees.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="Echancrées">
								<label class="form-check-label" for="gridRadios3">
									Echancrées
								</label>
							</div>
						</div>
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/emarginees.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios4" value="emarginees" checked>
								<label class="form-check-label" for="gridRadios4">
									emarginees
								</label>
							</div>
						</div>
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/libres.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios5" value="Libres">
								<label class="form-check-label" for="gridRadios5">
									Libres
								</label>
							</div>
						</div>
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/secedentes.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios6" value="Sécédentes" checked>
								<label class="form-check-label" for="gridRadios6">
									Sécédentes
								</label>
							</div>
						</div>
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/sinuees.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios7" value="Sinuées">
								<label class="form-check-label" for="gridRadios7">
									Sinuées
								</label>
							</div>
						</div>
						<div class="text-center px-2">
							<img src="{{ "/assets/lames/subdecurrentes.png" }}">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="gridRadios" id="gridRadios8" value="Subdécurrentes" checked>
								<label class="form-check-label" for="gridRadios8">
									Subdécurrentes
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="exampleFormControlTextarea1">Lames</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
					</div>
					<div class="form-group">
						<label for="exampleFormControlTextarea1">Pied</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
					</div>
					<div class="form-group">
						<label for="exampleFormControlTextarea1">Chair</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
					</div>
					<div class="form-group">
						<label for="exampleFormControlTextarea1">Habitat</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
					</div>
					<div class="form-group">
						<label for="exampleFormControlTextarea1">Remarques</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
					</div>

				</form>
			</div>
		</div>
	</div>

{% endblock %}
