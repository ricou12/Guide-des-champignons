
{% extends "default.html.twig" %}

{% block title %}
	Connexion
{% endblock %}

{% block meta %}
    <meta name="Connexion" content="Connectez-vous et participer à l'élaboration d'une base de données interactive.">
{% endblock %}

{% block og %}
    <meta property="og:title" content="Guide des champignons - Connexion">
    <meta property="og:description" content="Connectez-vous et participer à l'élaboration d'une base de données interactive.">
    <meta property="og:url" content="">
    <meta property="og:image" content="/assets/icones/logo.png"/>
    <meta property="og:image:width" content="100" />
    <meta property="og:image:height" content="100" />
{% endblock %}

{% block body %}
	<div class="background logger__bg--image"></div>
	<div class="background bgColor-blackLight"></div>
	<div class="container py-2 flex-grow-1">
		<div class="row d-flex justify-content-center p-2">
			<div class="col-12 col-sm-10 col-md-8 col-lg-6 bg-greenLight text-white p-3 rounded">
				<form class="border p-2" action="index.php?routing=connexion" method="POST">
					<div class="d-flex justify-content-between">
						<h3 class="font-weight-bold">Se connecter</h3>
						<a href="index.php?routing=creer-mon-compte" class="h4 font-italic">S'inscrire</a>
					</div>
					<div class="form-group">
						<h4 class="text-info">{{erreur}}</h4>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Pseudo</label>
						<input type="text" class="form-control" name="pseudo" id="pseudo" aria-describedby="emailHelp" required>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Mot de passe</label>
						<div class="input-group mb-3">
							<input type="password" name="password"  class="form-control" id="exampleInputPassword1" required>
							<button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="right" title="Mot de passe valide : De 8 à 15 caractères,1 lettre minuscule,1 lettre majuscule,1 de ces caractères spéciaux: $ @ % * + - _ !">?
							</button>
						</div>
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-light">Connexion</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}

