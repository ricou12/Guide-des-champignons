{% extends "default.html.twig" %}

{% block title %}
    Inscription
{% endblock %}

{% block meta %}
    <meta name="Inscription" content="Créer votre compte et participer à l'élaboration d'une base de données interactive.">
{% endblock %}

{% block og %}
    <meta property="og:title" content="Guide des champignons - Inscription">
    <meta property="og:description" content="Créer votre compte et participer à l'élaboration d'une base de données interactive.">
    <meta property="og:url" content="">
    <meta property="og:image" content="/assets/icones/logo.png"/>
    <meta property="og:image:width" content="100" />
    <meta property="og:image:height" content="100" />
{% endblock %}

{% block body %}
<div class="container py-2 flex-grow-1">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 bg-dark text-white p-3 rounded">
            <form class="border p-2" action="index.php?routing=createRegister" method ="POST">
                <div class="d-flex justify-content-between">
                    <h3 class="font-weight-bold">Inscription</h3>
                    <a href="index.php?routing=connexion" class="h4 font-italic">Se connecter</a>
                </div>
                <div class="form-group">
                    <h4 class="text-info">{{erreur}}</h4>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Pseudo</label>
                        <input type="text" class="form-control" name="pseudo" id="pseudo" aria-describedby="emailHelp" required>
                    </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mot de passe</label>
                    <div class="input-group mb-3">
                        
                    <input type="password" name="password"  class="form-control" id="exampleInputPassword1" required>
                    <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="right"
                        title="Mot de passe valide : De 8 à 15 caractères,1 lettre minuscule,1 lettre majuscule,1 de ces caractères spéciaux: $ @ % * + - _ !">?
                    </button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div> 
</div>

{% endblock %}

